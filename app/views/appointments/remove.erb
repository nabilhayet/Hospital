<%= flash[:message] %>
<br>
<h1> The appointments are : </h1>
 <%@apt.each do |a| %>
  <h2> Patient Name : <%=a.patient.name %> </h2>
  <br>
  <h2> Doctor Name : <%=a.doctor.name %> </h2>
  <br>
  <h2> Appointment Time : <%=a.time.strftime("%H:%M %p")%> </h2>
  <br>
  <h2>Appointment Date : <%=a.date%> </h2>
  <a href="/appointments/<%=a.id%>/delete">Delete</a>
<%end%>
